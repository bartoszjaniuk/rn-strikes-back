{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"jsx": "react-jsx",
		"isolatedModules": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["./src/**/*"]
}
