{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"isolatedModules": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": "."
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "lib", "tsup.config.ts"]
}
